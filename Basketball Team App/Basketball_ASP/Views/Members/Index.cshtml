@using Basketball_ASP.Models
@model ViewModel

@{
    ViewBag.Title = "Members";
}

<h2>Members</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.UserRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.TotalPaid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AspNetUsers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                @{ decimal? totalSpent = 0;}
                @foreach (Game g in Model.Games)
                {
                    if (g.paid == item.Email)
                    {
                        totalSpent += g.fee;
                    }
                }
                @totalSpent
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
